<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:background">@color/black</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>

        <!-- Set light status bar to false -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->

        <!-- SwitchCompat settings -->
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlHighlight">@color/green</item>


        <item name="colorControlActivated">@color/green</item>
        <!-- устанавливает цвет для включенного состояния -->
        <!-- "@color/green" здесь пример, замени его на нужный цвет -->
        <!-- также можно использовать атрибут "android:colorControlActivated" -->
    </style>
</resources>
